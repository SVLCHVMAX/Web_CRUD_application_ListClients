<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- list servlet -->
    <servlet>
        <servlet-name>ListServlet</servlet-name>
        <servlet-class>app.web.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- add servlet -->
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>app.web.AddServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <!-- edit servlet -->
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>app.web.EditServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <!-- delete servlet -->
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>app.web.DeleteServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <!-- Client servlet -->
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>app.web.ClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>

</web-app>